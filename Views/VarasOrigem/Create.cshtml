@model EscritorioAdvocacia.Models.VaraOrigem

@{
    ViewData["Title"] = "Cadastrar Nova Vara de Origem";
}

<h1 class="mb-4"><i class="fas fa-landmark text-info me-2"></i> Cadastrar Nova Vara de Origem</h1>

<div class="row">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Preencha as informações da Vara</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Comarca" class="control-label"></label>
                        <input asp-for="Comarca" class="form-control" />
                        <span asp-validation-for="Comarca" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4 d-flex justify-content-between">
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />

                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Voltar à Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}