@model EscritorioAdvocacia.Models.VaraOrigem

@{
    ViewData["Title"] = "Detalhes da Vara de Origem";
}

<h1 class="mb-4"><i class="fas fa-landmark text-info me-2"></i> Detalhes da Vara: @Model.Nome</h1>

<div class="card shadow-sm col-md-6">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">Informações da Vara e Comarca</h5>
    </div>
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-8">
                <strong>@Html.DisplayFor(model => model.Nome)</strong>
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Comarca)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Comarca)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2" title="Editar Vara">
        <i class="fas fa-edit"></i> Editar
    </a>

    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger me-2" title="Excluir Vara">
        <i class="fas fa-trash-alt"></i> Excluir
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar à Lista
    </a>
</div>