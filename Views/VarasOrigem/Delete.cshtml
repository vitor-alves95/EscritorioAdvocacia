@model EscritorioAdvocacia.Models.VaraOrigem

@{
    ViewData["Title"] = "Excluir Vara de Origem";
}

<h1 class="text-danger mb-4"><i class="fas fa-trash-alt me-2"></i> Excluir Vara de Origem</h1>

<div class="alert alert-danger" role="alert">
    <h3>Tem certeza que deseja excluir a Vara @Model.Nome?</h3>
    <p class="mb-0">Esta ação é irreversível e pode afetar processos associados à comarca de @Model.Comarca.</p>
</div>

<div class="card card-body bg-dark shadow-sm col-md-6">

    <h5 class="mb-3">Detalhes do Registro</h5>
    <hr />

    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-8">
            <strong>@Html.DisplayFor(model => model.Nome)</strong>
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Comarca)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Comarca)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <button type="submit" value="Delete" class="btn btn-danger me-2">
            <i class="fas fa-trash-alt"></i> Confirmar Exclusão
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancelar e Voltar para a Lista
        </a>
    </form>
</div>