@model EscritorioAdvocacia.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h1 class="mb-4">Detalhes do Cliente: @Model.Nome</h1>

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">Informações de Cadastro</h4>
    </div>
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CPF)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CPF)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Telefone)
            </dd>

            @if (Model.ApplicationUserId != null)
            {
                <dt class="col-sm-3">
                    Login Associado
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ApplicationUser.UserName)
                </dd>
            }
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2" title="Editar Cliente">
        <i class="fas fa-edit"></i> Editar
    </a>

    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger me-2" title="Excluir Cliente">
        <i class="fas fa-trash-alt"></i> Excluir
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar à Lista
    </a>
</div>