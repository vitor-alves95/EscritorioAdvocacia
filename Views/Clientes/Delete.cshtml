@model EscritorioAdvocacia.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1 class="text-danger mb-4">Excluir Cliente</h1>

<div class="alert alert-danger" role="alert">
    <h3>Tem certeza que deseja excluir o Cliente @Model.Nome?</h3>
    <p class="mb-0">Esta ação é irreversível e removerá o cadastro do cliente.</p>
</div>

<div class="card card-body bg-dark">

    <h4 class="mb-3">Detalhes do Cliente</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CPF)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <button type="submit" value="Delete" class="btn btn-danger me-2">
            <i class="fas fa-trash-alt"></i> Confirmar Exclusão
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancelar e Voltar para a Lista
        </a>
    </form>
</div>