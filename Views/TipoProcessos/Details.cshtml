@model EscritorioAdvocacia.Models.TipoProcesso

@{
    ViewData["Title"] = "Detalhes do Tipo de Processo";
}

<h1 class="mb-4"><i class="fas fa-sitemap text-primary me-2"></i> Detalhes do Tipo: @Model.Nome</h1>

<div class="card shadow-sm col-md-6">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Informações</h5>
    </div>
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-8">
                <strong>@Html.DisplayFor(model => model.Nome)</strong>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2" title="Editar Tipo">
        <i class="fas fa-edit"></i> Editar
    </a>

    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger me-2" title="Excluir Tipo">
        <i class="fas fa-trash-alt"></i> Excluir
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar à Lista
    </a>
</div>