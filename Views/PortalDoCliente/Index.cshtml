@model IEnumerable<EscritorioAdvocacia.Models.Processo>

@{
    ViewData["Title"] = "Meus Processos";
}

<h1 class="mb-4"><i class="fas fa-folder-open text-primary me-2"></i> Meus Processos</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered table-sm">
        <thead class="table-dark">
            <tr>
                <th style="width: 15%;">
                    Nº Unificado
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th style="width: 15%;">
                    Status de Andamento
                </th>
                <th style="width: 10%;">
                    Abertura
                </th>
                <th>
                    Cliente
                </th>
                <th style="width: 15%;">
                    Tipo de Processo
                </th>
                <th class="text-center" style="width: 250px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.NumeroUnificado)</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        <span class="badge bg-info">@Html.DisplayFor(modelItem => item.StatusAndamento)</span>
                    </td>
                    <td>
                        @item.DataAbertura.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoProcesso.Nome)
                    </td>
                    <td class="text-center">

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="Ver Detalhes Completos">
                            <i class="fas fa-eye"></i> Detalhes
                        </a>

                        @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>