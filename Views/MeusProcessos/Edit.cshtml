@model EscritorioAdvocacia.Models.Processo

@{
    ViewData["Title"] = "Atualizar Andamento";
}

<h1 class="mb-4"><i class="fas fa-sync-alt text-warning me-2"></i> Atualizar Andamento do Processo</h1>
<h4 class="text-secondary mb-4">@Model.Titulo | Nº: @Model.NumeroUnificado</h4>

<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-primary">Dados do Processo (Somente Leitura)</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="control-label">Número Unificado</label>
                                <input asp-for="NumeroUnificado" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="control-label">Cliente</label>
                                <input value="@Model.Cliente?.Nome" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">Atualização de Status e Descrição</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="StatusAndamento" class="control-label"></label>
                        <input asp-for="StatusAndamento" class="form-control" />
                        <span asp-validation-for="StatusAndamento" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DescricaoAndamento" class="control-label">Descrição Detalhada do Andamento</label>
                        <textarea asp-for="DescricaoAndamento" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="DescricaoAndamento" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3 d-flex justify-content-start">
                <input type="submit" value="Salvar Alterações" class="btn btn-warning text-white btn-lg me-2" />

                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}