@model IEnumerable<EscritorioAdvocacia.Models.Processo>

@{
    ViewData["Title"] = "Minha Carteira de Processos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-folder-open text-primary me-2"></i> Minha Lista de Processos</h1>
</div>

<table class="table table-striped table-hover table-bordered table-responsive-md">
    <thead class="table-dark">
        <tr>
            <th style="width: 150px;">
                @Html.DisplayNameFor(model => model.NumeroUnificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th style="width: 120px;">
                Status
            </th>
            <th style="width: 100px;">
                Abertura
            </th>
            <th>
                Cliente
            </th>
            <th>
                Advogado
            </th>
            <th class="text-center" style="width: 180px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroUnificado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.StatusAndamento)</span>
                </td>
                <td>
                    @item.DataAbertura.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvogadoResponsavel.Nome)
                </td>

                <td class="text-center">

                    <a asp-controller="MeusProcessos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Editar Andamento">
                        <i class="fas fa-edit"></i> Andamento
                    </a>

                    <a asp-controller="MeusProcessos" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Ver Detalhes">
                        <i class="fas fa-eye"></i> Detalhes
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>