@model IEnumerable<EscritorioAdvocacia.Models.Compromisso>

@{
    ViewData["Title"] = "Agenda de Compromissos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="far fa-calendar-alt text-success me-2"></i> Agenda de Compromissos</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Novo Compromisso
        </a>
    </p>
</div>

<table class="table table-striped table-hover table-bordered table-responsive-lg table-sm">
    <thead class="table-dark">
        <tr>
            <th style="width: 20%;">
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th style="width: 150px;">
                Início
            </th>
            <th style="width: 150px;">
                Término
            </th>
            <th style="width: 15%;">
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                Advogado
            </th>
            <th>
                Processo
            </th>
            <th class="text-center" style="width: 300px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @item.DataHoraInicio.ToString("dd/MM/yy HH:mm")
                </td>
                <td>
                    @item.DataHoraFim.ToString("dd/MM/yy HH:mm")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Local)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Advogado.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Processo.Titulo)
                </td>
                <td class="text-center">

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Editar">
                        <i class="fas fa-edit"></i> Editar
                    </a>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="Detalhes">
                        <i class="fas fa-eye"></i> Detalhes
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                        <i class="fas fa-trash"></i> Excluir
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>