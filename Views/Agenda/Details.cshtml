@model EscritorioAdvocacia.Models.Compromisso

@{
    ViewData["Title"] = "Detalhes do Compromisso";
}

<h1 class="mb-4"><i class="fas fa-calendar-check text-success me-2"></i> Detalhes do Compromisso</h1>
<h4 class="text-secondary mb-4">@Model.Titulo</h4>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Informações Detalhadas</h5>
            </div>
            <div class="card-body">
                <dl class="row">

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataHoraInicio)</dt>
                    <dd class="col-sm-9">
                        <i class="far fa-clock me-1"></i> <strong>@Model.DataHoraInicio.ToString("dd/MM/yyyy HH:mm")</strong>
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataHoraFim)</dt>
                    <dd class="col-sm-9">
                        <i class="far fa-clock me-1"></i> @Model.DataHoraFim.ToString("dd/MM/yyyy HH:mm")
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Local)</dt>
                    <dd class="col-sm-9">
                        <i class="fas fa-map-marker-alt me-1"></i> @Html.DisplayFor(model => model.Local)
                    </dd>

                    <dt class="col-sm-12"><hr /></dt>

                    <dt class="col-sm-3">Advogado:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Advogado.Nome)</dd>

                    <dt class="col-sm-3">Processo:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Processo.Titulo) (@Html.DisplayFor(model => model.Processo.NumeroUnificado))</dd>

                    <dt class="col-sm-12"><hr /></dt>

                    <dt class="col-sm-12">@Html.DisplayNameFor(model => model.Descricao)</dt>
                    <dd class="col-sm-12">
                        <pre class="bg-light p-3 border rounded" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Descricao)</pre>
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2" title="Editar Compromisso">
        <i class="fas fa-edit"></i> Editar
    </a>

    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger me-2" title="Excluir Compromisso">
        <i class="fas fa-trash-alt"></i> Excluir
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar para Agenda
    </a>
</div>