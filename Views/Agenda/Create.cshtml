@model EscritorioAdvocacia.Models.Compromisso

@{
    ViewData["Title"] = "Cadastrar Novo Compromisso";
}

<h1 class="mb-4"><i class="fas fa-calendar-plus text-primary me-2"></i> Cadastrar Novo Compromisso</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Preencha os dados do agendamento</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group mb-3">
                                <label asp-for="Titulo" class="control-label"></label>
                                <input asp-for="Titulo" class="form-control" />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Local" class="control-label"></label>
                                <input asp-for="Local" class="form-control" />
                                <span asp-validation-for="Local" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="AdvogadoId" class="control-label">Advogado Responsável</label>
                                <select asp-for="AdvogadoId" class="form-control" asp-items="ViewBag.AdvogadoId"></select>
                                <span asp-validation-for="AdvogadoId" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ProcessoId" class="control-label">Processo Associado</label>
                                <select asp-for="ProcessoId" class="form-control" asp-items="ViewBag.ProcessoId">
                                    <option value="">-- Nenhum Processo Associado --</option>
                                </select>
                                <span asp-validation-for="ProcessoId" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="col-md-6">

                            <div class="form-group mb-3">
                                <label asp-for="DataHoraInicio" class="control-label">Início (Data e Hora)</label>
                                <input asp-for="DataHoraInicio" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DataHoraInicio" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="DataHoraFim" class="control-label">Fim (Data e Hora)</label>
                                <input asp-for="DataHoraFim" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DataHoraFim" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Descricao" class="control-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="8"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                    <div class="form-group mt-4 d-flex justify-content-start">
                        <input type="submit" value="Cadastrar Compromisso" class="btn btn-primary btn-lg me-2" />

                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Voltar à Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}