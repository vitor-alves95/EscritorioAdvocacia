@model EscritorioAdvocacia.Models.Compromisso

@{
    ViewData["Title"] = "Excluir Compromisso";
}

<h1 class="text-danger mb-4"><i class="fas fa-trash-alt me-2"></i> Excluir Compromisso</h1>

<div class="alert alert-danger" role="alert">
    <h3>Tem certeza que deseja excluir o compromisso: @Model.Titulo?</h3>
    <p class="mb-0">Esta ação é irreversível e removerá o agendamento da agenda.</p>
</div>

<div class="card card-body bg-dark shadow-sm col-md-8">

    <h5 class="mb-3">Detalhes do Compromisso</h5>
    <hr />

    <dl class="row">

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd class="col-sm-9"><strong>@Html.DisplayFor(model => model.Titulo)</strong></dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataHoraInicio)</dt>
        <dd class="col-sm-9">@Model.DataHoraInicio.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataHoraFim)</dt>
        <dd class="col-sm-9">@Model.DataHoraFim.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Local)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Local)</dd>

        <dt class="col-sm-12"><hr /></dt>

        <dt class="col-sm-3">Advogado:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Advogado.Nome)</dd>

        <dt class="col-sm-3">Processo:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Processo.Titulo)</dd>

        <dt class="col-sm-12">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-12">
            <pre class="bg-white p-2 border rounded" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Descricao)</pre>
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <button type="submit" value="Delete" class="btn btn-danger btn-lg me-2">
            <i class="fas fa-trash-alt"></i> Confirmar Exclusão
        </button>

        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Cancelar e Voltar para a Agenda
        </a>
    </form>
</div>

