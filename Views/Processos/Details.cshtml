@model EscritorioAdvocacia.Models.Processo

@{
    ViewData["Title"] = "Detalhes do Processo";
}

<h1 class="mb-4">Detalhes do Processo: @Model.NumeroUnificado</h1>
<h4 class="text-secondary mb-4">@Model.Titulo</h4>

<div class="row">

    <div class="col-md-7">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Informações e Partes Envolvidas</h5>
            </div>
            <div class="card-body">
                <dl class="row">

                    <dt class="col-sm-4">Número Unificado:</dt>
                    <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.NumeroUnificado)</strong></dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataAbertura)</dt>
                    <dd class="col-sm-8">@Model.DataAbertura.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Status Atual:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.StatusAndamento)</span>
                    </dd>

                    <dt class="col-sm-12"><hr /></dt>

                    <dt class="col-sm-4">Cliente:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cliente.Nome)</dd>

                    <dt class="col-sm-4">Advogado Responsável:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AdvogadoResponsavel.Nome)</dd>

                    <dt class="col-sm-4">Tipo de Processo:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoProcesso.Nome)</dd>

                    <dt class="col-sm-4">Vara de Origem:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.VaraOrigem.Nome)</dd>

                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Andamento e Histórico</h5>
            </div>
            <div class="card-body">
                <dt class="mb-2">@Html.DisplayNameFor(model => model.DescricaoAndamento)</dt>
                <dd>
                    <pre class="bg-light p-3 border rounded" style="white-space: pre-wrap;">@Html.DisplayFor(model => model.DescricaoAndamento)</pre>
                </dd>
            </div>
        </div>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2" title="Editar Processo">
        <i class="fas fa-edit"></i> Editar
    </a>

    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger me-2" title="Excluir Processo">
        <i class="fas fa-trash-alt"></i> Excluir
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar à Lista
    </a>
</div>