@model IEnumerable<EscritorioAdvocacia.Models.Compromisso>

@{
    ViewData["Title"] = "Minha Agenda";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="far fa-calendar-alt text-success me-2"></i> Minha Agenda</h1>
    <p>

    </p>
</div>

<table class="table table-striped table-hover table-bordered table-responsive-lg">
    <thead class="table-dark">
        <tr>
            <th style="width: 25%;">
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th style="width: 20%;">
                Data e Hora
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                Advogado
            </th>
            <th>
                Processo
            </th>
            <th class="text-center" style="width: 120px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @item.DataHoraInicio.ToString("dd/MM HH:mm") - @item.DataHoraFim.ToString("HH:mm")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Local)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Advogado.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Processo.Titulo)
                </td>
                <td class="text-center">
                    <a asp-controller="MinhaAgenda" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Ver Detalhes">
                        <i class="fas fa-eye"></i> Detalhes
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>