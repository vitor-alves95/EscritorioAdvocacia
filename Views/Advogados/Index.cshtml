@model IEnumerable<EscritorioAdvocacia.Models.Advogado>

@{
    ViewData["Title"] = "Gerenciar Advogados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-gavel text-primary me-2"></i> Gerenciamento de Advogados</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Adicionar Advogado
        </a>
    </p>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OAB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OAB)
                </td>
                <td>
                    <a href="mailto:@item.Email">@Html.DisplayFor(modelItem => item.Email)</a>
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="Editar">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1" title="Detalhes">
                        <i class="fas fa-eye"></i> Detalhes
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                        <i class="fas fa-trash"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>