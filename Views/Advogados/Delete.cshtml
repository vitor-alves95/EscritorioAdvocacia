@model EscritorioAdvocacia.Models.Advogado

@{
    ViewData["Title"] = "Excluir Advogado";
}

<h1 class="text-danger mb-4">Excluir Advogado</h1>

<div class="alert alert-danger" role="alert">
    <h3>Tem certeza que deseja excluir o Advogado @Model.Nome?</h3>
    <p class="mb-0">Esta ação não poderá ser desfeita.</p>
</div>

<div class="card card-body bg-dark">
    <h4 class="mb-3">Detalhes do Advogado</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.OAB)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.OAB)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-trash-alt"></i> Confirmar Exclusão
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancelar e Voltar para a Lista
        </a>
    </form>
</div>